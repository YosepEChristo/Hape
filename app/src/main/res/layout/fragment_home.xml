<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.HomeFragment">
    <TextView
        android:id="@+id/header_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/sora"
        android:text="@string/headerHome"
        android:textColor="@color/brown"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/motto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15ssp"
                android:fontFamily="@font/sora"
                android:text="Ngampus dengan aman tiap harinya"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_8ssp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintEnd_toStartOf="@id/cv_two"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/motto">
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_two"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_one"
                app:layout_constraintTop_toBottomOf="@id/motto">
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_three"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintEnd_toEndOf="@id/cv_one"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/cv_one"
                app:layout_constraintTop_toBottomOf="@id/cv_one">
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_four"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintBottom_toBottomOf="@id/cv_three"
                app:layout_constraintEnd_toEndOf="@id/cv_two"
                app:layout_constraintStart_toStartOf="@id/cv_two"
                app:layout_constraintTop_toTopOf="@id/cv_three">
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/recentused"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15ssp"
                android:fontFamily="@font/sora"
                android:text="Recently Used"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cv_three" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>