<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.HomeFragment">
    <TextView
        android:id="@+id/header_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/sora"
        android:text="@string/headerHome"
        android:textColor="@color/brown"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/motto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15ssp"
                android:fontFamily="@font/sora"
                android:text="@string/motto"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_one"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_8ssp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintEnd_toStartOf="@id/cv_two"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/motto">
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_two"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_one"
                app:layout_constraintTop_toBottomOf="@id/motto">

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_three"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_marginTop="@dimen/_13sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintEnd_toEndOf="@id/cv_one"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/cv_one"
                app:layout_constraintTop_toBottomOf="@id/cv_one">

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_four"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_margin="@dimen/_8ssp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                app:cardElevation="@dimen/_4ssp"
                app:layout_constraintBottom_toBottomOf="@id/cv_three"
                app:layout_constraintEnd_toEndOf="@id/cv_two"
                app:layout_constraintStart_toStartOf="@id/cv_two"
                app:layout_constraintTop_toTopOf="@id/cv_three">
            </androidx.cardview.widget.CardView>


            <!-- Recently used -->
            <TextView
                android:id="@+id/recentused"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17ssp"
                android:fontFamily="@font/sora"
                android:text="@string/recent"
                android:textColor="@color/brown"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cv_three" />

            <FrameLayout
                android:id="@+id/ru_one"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_2ssp"
                android:layout_marginEnd="@dimen/_2ssp"
                android:elevation="@dimen/_4sdp"
                android:background="@drawable/border_backgroud"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recentused"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ru_one_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/sora"
                    android:text="@string/sakit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_43sdp"

                    android:layout_marginTop="@dimen/_23sdp"
                    android:fontFamily="@font/sora"
                    android:text="@string/template"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal">
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ru_btn_one"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_75sdp"
                    android:layout_marginStart="@dimen/_210sdp"
                    app:cardBackgroundColor="@color/brown"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="@dimen/_4ssp">
                    <ImageView
                        android:id="@+id/ru_btn_one_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_white_24"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/ru_one_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/ru_one"/>

            <FrameLayout
                android:id="@+id/ru_two"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_margin="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                android:elevation="@dimen/_4sdp"
                android:background="@drawable/border_backgroud"
                app:layout_constraintStart_toStartOf="@id/ru_one"
                app:layout_constraintEnd_toEndOf="@id/ru_one"
                app:layout_constraintTop_toBottomOf="@id/ru_one_space"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ru_two_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/sora"
                    android:text="@string/sakit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_43sdp"

                    android:layout_marginTop="@dimen/_23sdp"
                    android:fontFamily="@font/sora"
                    android:text="@string/template"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal">
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ru_btn_two"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_75sdp"
                    android:layout_marginStart="@dimen/_210sdp"
                    app:cardBackgroundColor="@color/brown"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="@dimen/_4ssp">
                    <ImageView
                        android:id="@+id/ru_btn_two_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_white_24" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/ru_two_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/ru_two"/>

            <FrameLayout
                android:id="@+id/ru_three"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_margin="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8ssp"
                android:elevation="@dimen/_4sdp"
                android:background="@drawable/border_backgroud"
                app:layout_constraintStart_toStartOf="@id/ru_one"
                app:layout_constraintEnd_toEndOf="@id/ru_one"
                app:layout_constraintTop_toBottomOf="@id/ru_two_space"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ru_three_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/sora"
                    android:text="@string/sakit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_43sdp"

                    android:layout_marginTop="@dimen/_23sdp"
                    android:fontFamily="@font/sora"
                    android:text="@string/template"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="normal">
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ru_btn_three"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_75sdp"
                    android:layout_marginStart="@dimen/_210sdp"
                    app:cardBackgroundColor="@color/brown"
                    app:cardCornerRadius="@dimen/_8ssp"
                    app:cardElevation="@dimen/_4ssp">
                    <ImageView
                        android:id="@+id/ru_btn_three_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_white_24" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/ru_three_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/ru_three"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>